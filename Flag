package com.Lukas.Mario.platformer.objects;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Rectangle;
import java.util.LinkedList;

import com.Lukas.Mario.Window.Game;
import com.Lukas.Mario.platformer.framework.GameObject;
import com.Lukas.Mario.platformer.framework.ObjectId;

public class Flag extends GameObject{

	public Flag(float x, float y, ObjectId id) {
		super(x, y, id);
	}

	public void tick(LinkedList<GameObject> object) {
		
	}
	
	public void render(Graphics g) {
		
		g.setColor(Color.red); // the "flag" is currently a red square
		g.fillRect((int) x, (int) y, 32, 32); // it fills the rectangle with the color above		
	}

	public Rectangle getBounds() {
		
		return  new Rectangle((int) x, (int) y, 32, 32); // size of "flag" in pixels
		
	}

	public Rectangle getBoundsRight() {
		return null;
	}

	public Rectangle getBoundsLeft() {
		return null;
	}

	public Rectangle getBoundsTop() {
		return null;
	}

}
